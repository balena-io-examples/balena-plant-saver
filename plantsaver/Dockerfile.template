FROM balenalib/%%BALENA_MACHINE_NAME%%-python:3.7.3-buster-build

RUN install_packages python3-smbus wget unzip libgpiod2

RUN pip3 install --upgrade \
  pip \
  smbus2 \
  RPi.GPIO \
  balena-sdk \ 
  automationhat \
  adafruit-circuitpython-dht \
  paho-mqtt

COPY . /usr/src

CMD python /usr/src/start.py
